<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f2f7"  android:padding="24dp"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, Student ID!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewMultiplyResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Captcha Result Was:"
        android:textSize="20sp"
        android:textColor="#455a64"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewMultiplyResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Result]"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#00796b"  android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMultiplyResultLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewWaysToMultiplyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ways to achieve this number:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#455a64"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMultiplyResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewWaysToMultiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 * 6 = 12\n3 * 4 = 12"
        android:textSize="18sp"
        android:textColor="#546e7a"
        android:lineSpacingExtra="6dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWaysToMultiplyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>